import org.junit.jupiter.api.Test;
import static org.junit.jupiter.api.Assertions.*;

public class GameTest {

    @Test
    public void testUpdateWithFoodGeneration() {
        Pane gameRoot = new Pane(); 
        Game game = new Game(gameRoot);

        // Supposez que cette méthode update() doit générer de la nourriture
        boolean foodGenerated = game.update();

        assertTrue(foodGenerated); // Vérifie si la nourriture a été générée
        assertNotNull(game.getFood()); // Vérifie si la nourriture existe après la mise à jour
    }

    @Test
    public void testUpdateWithoutFoodGeneration() {
        Pane gameRoot = new Pane(); 
        Game game = new Game(gameRoot);

        // Supposez que cette méthode update() ne doit pas générer de la nourriture
        boolean foodGenerated = game.update();

        assertFalse(foodGenerated); // Vérifie si la nourriture n'a pas été générée
        assertNull(game.getFood()); // Vérifie si aucune nourriture n'existe après la mise à jour
    }

    @Test
    public void testCollisionWithFood() {
        Pane gameRoot = new Pane(); 
        Game game = new Game(gameRoot);

        // Supposez que la tête du serpent entre en collision avec la nourriture
        game.getPlayers().get(0).getSnake().setPosition(game.getFood().getPosition());

        boolean collidedWithFood = game.checkCollisionWithFood();

        assertTrue(collidedWithFood); // Vérifie si une collision avec la nourriture est détectée
    }
}
